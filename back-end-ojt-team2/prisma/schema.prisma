generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String  @default("admin")
  akses    Boolean @default(false)
}

model kategori_pelatihan {
  id_kategori   Int @id @default(autoincrement())
  nama_kategori String 
  data          data_pelatihan[]  // <-- RELASI
}

model data_pelatihan {
  id_pelatihan        Int @id @default(autoincrement())
  nama_pelatihan      String?
  tujuan              String
  persyaratan         String
  materi_pembelajaran String
  instruktur          String
  sertifikasi         String
  metode_pembelajaran String
  biaya               String
  fasilitas           String
  contact             String
  nama_kategori       String

  id_kategori   Int
  kategori      kategori_pelatihan @relation(fields: [id_kategori], references: [id_kategori])
}

model jadwal_pelatihan {
  id      Int      @id  @default(autoincrement())
  bidang  String  
  nama    String
  harga   Int
  jmlHari Int
  bulan   String?
  tanggal String?
}

model peserta {
  id             Int @id @default(autoincrement())
  institusi      String
  alamat         String
  no_telp        String
  fax            String
  email          String
  nama_peserta   String
  telp_peserta   String
  email_peserta  String
  nama_pelatihan String
}